---
import { Image } from 'astro:assets';
import heroImage from '../../assets/Smiling Programmer at Work.png';
import { basic } from '../../config/cv.json';
---

<section class="py-5 px-4 sm:py-10 lg:py-16">
    <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="grid items-center grid-cols-1 gap-12 lg:grid-cols-2">
            <div class="relative flex justify-center">
                <Image class="w-full md:max-w-md lg:max-w-md"
                    src={heroImage}
                    loading="eager"
                    alt="Andrew Pritykin" />
            </div>
            <div>
                <p class="text-lg text-offset">
                    {basic?.job}
                </p>

                <h1 class="text-2xl font-bold sm:text-4xl lg:text-5xl mt-3">
                    {basic?.name}
                </h1>

                <p class="mt-5 text-base sm:text-xl">
                    {basic?.summary}
                </p>

                <div class="mt-10 sm:flex sm:items-center sm:space-x-8">
                    <a href=`/cv/${basic?.cv_file_name}` title="Download CV" download
                        class="inline-flex items-center justify-center px-4 py-4 text-base text-white
                            font-semibold transition-all duration-200 rounded
                            bg-primary hover:bg-secondary focus:bg-secondary" role="button">
                        Download CV
                    </a>
                    <a href="https://calendly.com/apritykin/30-min-meeting" target="_blank" rel="noopener noreferrer"
                        class="inline-flex items-center justify-center px-4 py-4 text-base text-white
                            font-semibold transition-all duration-200 rounded
                            bg-primary hover:bg-secondary focus:bg-secondary mt-4 sm:mt-0" role="button">
                        Schedule a Call
                    </a>
                </div>
                <div class="mt-6 flex space-x-6">
                    <a href="mailto:andrew.pritykin@gmail.com" class="text-black hover:text-black transition-colors" aria-label="Email">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24"><path d="M12 13.065 2.4 6.6A2 2 0 0 1 4 6h16a2 2 0 0 1 1.6.6zm9.6-5.6A2 2 0 0 1 22 8v8a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V8a2 2 0 0 1 .4-1.135l9.6 6.465z"/></svg>
                    </a>
                    <a href="https://github.com/apritykin" target="_blank" rel="noopener noreferrer" class="text-black hover:text-black transition-colors" aria-label="GitHub">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24"><path d="M12 .5C5.648.5.5 5.648.5 12c0 5.086 3.292 9.389 7.862 10.907.575.106.785-.25.785-.555 0-.274-.01-1.002-.015-1.966-3.198.695-3.875-1.542-3.875-1.542-.523-1.33-1.277-1.684-1.277-1.684-1.044-.714.08-.7.08-.7 1.154.081 1.761 1.185 1.761 1.185 1.026 1.758 2.693 1.25 3.35.956.104-.743.402-1.25.73-1.538-2.553-.291-5.238-1.277-5.238-5.686 0-1.256.448-2.283 1.184-3.088-.119-.292-.513-1.468.112-3.06 0 0 .966-.31 3.167 1.18a10.98 10.98 0 0 1 2.885-.388c.978.004 1.964.132 2.885.388 2.2-1.49 3.165-1.18 3.165-1.18.627 1.592.233 2.768.114 3.06.738.805 1.184 1.832 1.184 3.088 0 4.42-2.689 5.392-5.252 5.678.413.355.78 1.056.78 2.13 0 1.538-.014 2.778-.014 3.158 0 .308.208.665.79.552C20.71 21.385 24 17.084 24 12c0-6.352-5.148-11.5-12-11.5z"/></svg>
